<h1> New Brewery </h1>

<%= form_for @brewery do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :province %>
  <%= f.text_field :province %>
 
  <br>
  <%= f.label :phone %>
  <%= f.telephone_field :phone %>
    
  <br>
  
  <%= f.submit %>
  
  <%end%>
