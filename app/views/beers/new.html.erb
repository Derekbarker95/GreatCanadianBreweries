

<%= form_for [@brewery, @beer] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :style %>
  <%= f.text_field :style %>
  <br>
  <%= f.label :ibu %>
  <%= f.number_field :ibu %>
  <br>
  <%= f.label :abv %>
  <%= f.text_field :abv %>
  <br>
  <%= f.label :color %>
  <%= f.text_field :color %>
  <br>
  
  <%= f.submit %>

<% end %>
